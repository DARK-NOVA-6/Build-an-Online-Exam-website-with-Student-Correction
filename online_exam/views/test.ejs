<script>
    courseName = '<%= course %>';
    testId = '<%= test_id %>';
</script>

<div class="backgroundSection">
    <div id="screenDisable1" style="display: none;">
        <div id="screenDisable2">
            <div class="loadingImg" id="boxScalingLoadin">
                <div class="loadingImg" id="boxRotatingLoadin">
                    <img src="../public/icon/loading/white_1.svg" alt="" id="whiteShape1">
                    <img src="../public/icon/loading/white_1.svg" alt="" id="whiteShape2">
                    <img src="../public/icon/loading/blue_1.svg" alt="" id="blueShape">
                </div>
            </div>
        </div>
    </div>
    <aside id="infoBar">
        <div id="timerCapsul">
            <label for="timerBar">
                running time:
            </label>
            <div class="timer" id="timerBar"></div>
        </div>

        <div class="capsul">
            <label for="totques">
                Total number of questions:
            </label>
            <div class="testInfo" id="totques"></div>
        </div>

        <div class="capsul">
            <label for="nQuesLeft">
                Questions left to answer:
            </label>
            <div class="testInfo" id="nQuesLeft"></div>
        </div>
        <div class="capsul">
            <label for="currQues">
                Current question:
            </label>
            <div class="testInfo" id="currQues"></div>
        </div>
    </aside>
    <aside id="submitBar">
        <div id="submitBSection">
            <button id='submitB' class='button' onclick='askToEnd()'>Submit</button>
        </div>
    </aside>


    <div id="quesContainer">
        <div id='quesTitleAndMark'>
            <div>
                Question <b id="quesNumb"></b>
            </div>
            <div id='quesMark'></div>
        </div>

        <div id="textQuesSec">
            <p></p>
            <hr/>
        </div>

        <div id="optionsSec"></div>

        <hr style="width: 100%; height: 5px; background-color: black;"/>
        <div id="pageMovCtrl">
            <div class="itemCtrl" id="numberCtrl">
                <div class="movTo" id="first">
                    <img src="../../public/icon/left_arrow2.png" alt="1" onclick="changeQues(1)"/>
                </div>
                <div class="movTo" id="prev">
                    <img src="../../public/icon/left_arrow1.png" alt="P" onclick="changeQues(currQues - 1)"/>
                </div>
                <div class="movTo" id="list">
                    ...
                </div>
                <div class="movTo" id="next">
                    <img src="../../public/icon/right_arrow1.png" alt="N" onclick="changeQues(currQues + 1)"/>
                </div>
                <div class="movTo" id="last">
                    <img src="../../public/icon/right_arrow2.png" alt="L" onclick="changeQues(totques)"/>
                </div>
            </div>
        </div>
    </div>

    <script>
        startLoading();
        $(document).ready(() => {
            studentSolveTest();
            setTimeout(() => {
                startTimer();
                buildList();
                buildQuestion();
                setTimeout(
                    ()=>{
                        initialEvents();
                        stopLoading();
                    }
                ,1000);
            }, 1000);
        });
    </script>

</div>
<footer class="footer">
    <div>
        <div id="footerTitle">Tester Online</div>
        <br/>
        <div id="footerSubTitle">

        </div>
    </div>
</footer>

</body>

</html>